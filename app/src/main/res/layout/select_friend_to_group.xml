<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectFriendToGroupRowFirstRelativeLayoutId"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectFriendToGroupRowCardViewId">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/selectFriendToGroupRowSecondRelativeLayoutId">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_profile_picture"
                android:id="@+id/selectFriendToGroupRowCircleImageViewId"
                app:civ_border_width="3dp"
                app:civ_border_color="#F44336"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/selectFriendToGroupRowNameTextViewId"
                android:text="@string/select_friend_to_group_text_view"
                android:layout_centerInParent="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/selectFriendToGroupCheckBoxId"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>